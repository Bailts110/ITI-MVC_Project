@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}
<h2>Category Portal</h2>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.Id</th>
                <th scope="col">@item.Name</th>
              
                <th scope="col">@item.Description</th>
               
                <th scope="col">
                    <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-2">Edit</a>
                    <form asp-controller="Category" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success m-3">Add Category</a>
    </tfoot>
</table>
